= simple_form_for booking do |f|
  = f.error_notification
  = f.input :date

  - unless user_signed_in?
    %div.well
      = f.input :password
      %p.help-block Provide the password so we can create an account for You.
      = f.input :password_confirmation

  = f.simple_fields_for :customer do |c|
    = c.input :first_name
    = c.input :last_name
    = c.input :email

    = link_to t('shared.back'), :back, class: 'btn btn-default'
    = f.button :submit
