%tr
  %td= booking.number
  %td= booking.customer_first_name
  %td= booking.customer_last_name
  %td= booking.customer_email
  %td= booking.reservation_date
  %td= booking.status
  %td= booking.user_name
  %td= booking.table
  %td
    = link_to admin_booking_path(booking), title: t('shared.show') do
      %button.btn.btn-default{ title: t('shared.show'), data: { tooltip: 'true', placement: 'bottom' } }
        = fa_icon "search"
    = link_to edit_admin_booking_path(booking), { title: t('shared.edit') } do
      %button.btn.btn-default{ title: t('shared.edit'), data: { tooltip: 'true', placement: 'bottom' } }
        = fa_icon "edit"
    = link_to admin_booking_path(booking), { method: :delete, title: t('shared.delete') } do
      %button.btn.btn-default{ title: t('shared.delete'), data: { tooltip: 'true', placement: 'bottom' } }
        = fa_icon "times"
    - if booking.pending?
      = link_to accept_admin_booking_path(booking), { method: :patch, title: t('booking.buttons.accept') } do
        %button.btn.btn-success{ title: t('booking.buttons.accept'), data: { tooltip: 'true', placement: 'bottom' } }
          = fa_icon "thumbs-up"
      = link_to rejection_admin_booking_path(booking), { remote: :true, title: t('booking.buttons.reject') } do
        %button.btn.btn-danger{ title: t('booking.buttons.reject'), data: { tooltip: 'true', placement: 'bottom' } }
          = fa_icon "thumbs-down"
