%nav.navbar.navbar-inverse.navbar-static-top
  .container
    .navbar-header
      %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to 'Home', root_path, class: 'navbar-brand'
    .collapse.navbar-collapse
      %ul.nav.navbar-nav
        = render 'layouts/navigation_links'
      %ul.nav.navbar-nav.navbar-right
        - if user_signed_in?
          %li= link_to 'Your bookings', bookings_path
          %li= link_to t('navbar.logout'), destroy_user_session_path, method: :delete
        - else
          %li= link_to t('navbar.signin'), new_user_session_path
          %li= link_to t('navbar.signup'), new_user_registration_path
