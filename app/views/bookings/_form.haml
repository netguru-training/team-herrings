= simple_form_for booking do |f|
  = f.error_notification
  = f.input :date
  = f.simple_fields_for :customer do |c|
    = c.input :first_name
    = c.input :last_name
    = c.input :email
  - unless user_signed_in?
    %div.well
      %p
        Provide the password so we can create an account for You or
        = link_to('log in', new_user_session_path)
        to existing one.
      = f.input :password
      = f.input :password_confirmation
  = f.button :submit
