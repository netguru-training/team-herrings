.row.well
  .col-md-12
    = simple_form_for [:admin, category], html: { class: 'form-horizontal' }, wrapper: :horizontal_form do |f|
      = f.input :name, label: 'Category name'
      .form-group
        .col-sm-9.col-sm-offset-3
          = link_to 'Back', :back, class: 'btn btn-default'
          = f.button :submit
