.row
  .col-md-12
    %h3 Users
    %p= link_to 'New User', new_admin_user_path, class: 'btn btn-default'
    %table.table.table-striped
      %thead
        %tr
          %th Name
          %th Email
          %th Role
          %th Actions

      %tbody
        - @users.each do |user|
          %tr
            %td= user.name
            %td= user.email
            %td= user.role
            %td
              = link_to [:admin, user], class: 'btn btn-default', title: t('shared.show') do
                = fa_icon "search"
              = link_to edit_admin_user_path(user), { class: 'btn btn-default', title: t('shared.edit') } do
                = fa_icon "edit"
              = link_to [:admin, user], {:method => :delete, :data => { :confirm => 'Are you sure?' }, class: 'btn btn-default', title: t('shared.delete') } do
                = fa_icon "times"

