#rejection-modal.modal.fade{ tabindex: "-1", role: "dialog" }
  .modal-dialog
    .modal-content
      = simple_form_for booking, url: reject_admin_booking_path(booking) do |f|
        .modal-header
          %h4.modal-title Reject booking
        .modal-body
          %p
            %strong= "Customer: "
            #{booking.customer_first_name} #{booking.customer_last_name}
          %p
            %strong= "Table: "
            = booking.table.decorate.formatted_places
          %p
            %strong= "Booking datetime: "
            = booking.decorate.reservation_date
          .form-inputs
            = f.input :reject_reason
        .modal-footer
          = button_tag t('shared.cancel'), class: 'btn btn-default', data: { dismiss: 'modal' }
          = button_tag(type: 'submit', class: 'btn btn-default btn-danger') do
            = fa_icon "thumbs-down"
            = t('booking.buttons.reject')
